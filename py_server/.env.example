# VeriChain Environment Configuration
# Copy this file to .env and fill in your values

# Required: Google Gemini API key for AI agent functionality
GEMINI_API_KEY=your_gemini_api_key_here

# Database configuration (SQLite for development, PostgreSQL/MySQL for production)
DATABASE_URL=sqlite+aiosqlite:///./inventory.db

# Server configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
ENVIRONMENT=development

# Logging configuration
LOG_LEVEL=DEBUG

# CORS configuration for frontend integration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Agent configuration
DEFAULT_CONFIDENCE_THRESHOLD=0.7
MAX_RETRY_ATTEMPTS=3
NOTIFICATION_BATCH_SIZE=50

# Educational calendar settings (for seasonal awareness)
SCHOOL_START_MONTH=8  # August
SCHOOL_END_MONTH=6    # June
EXAM_MONTHS=12,5      # December, May

# Stationery categories configuration
CRITICAL_STOCK_RATIO=0.1   # 10% of max stock
LOW_STOCK_RATIO=0.2        # 20% of max stock
REORDER_LEAD_TIME_DAYS=7   # 1 week lead time

# Supplier negotiation settings
MAX_NEGOTIATION_ROUNDS=3
PRICE_VARIANCE_THRESHOLD=0.15  # 15% price variance threshold
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=sqlite:///./verichain.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/verichain.log

# Agent Configuration
MAX_RETRY_ATTEMPTS=3
REQUEST_TIMEOUT=30
MEMORY_SIZE=10

# Security
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30